<div class="container">
  <div class="row">
  <script type="text/javascript">
    var clicks = 0;
    function onClick() {
        clicks += 1;
        document.getElementById("clicks").innerHTML = clicks;
    };
    </script>

  

  <div class="col-lg-12 business">
  
  <h2><img src="<%=business.image%>" class="img-rounded" heigth="225" width="225"> </h2>
	<h2><%=business.name%></h2> 
  <h4><%=business.address%></h4>
  <h4><%=business.type%></h4>

  <h2 class="geo"></h2>
 
    <h4>Locate this business or other places</h4>

    <script type="text/javascript">
        function lookupGeoData14() {            
            myGeoPositionGeoPicker({
                returnFieldMap                    : {'geoposition14' : '<LAT>,<LNG>'},
                zoomLevel                            : 16,
                startPositionInputFieldIds        : ['fieldStreet', 'fieldCity']
            });
        }
    </script>
    
    <input type="text" class="form-control" name="fieldStreet" id="fieldStreet" placeholder="Enter Street"><br>
    <input type="text" class="form-control" name="fieldCity" id="fieldCity" placeholder="Enter City"><br>
   <button type="button" onclick="lookupGeoData14();">Locate</button>
 </div>


  <div class="col-md-6 scrollable">
  <%comments.forEach(function(rows){%>
  <p class="lead"><small><bold><%=rows.comment%></bold></small></p>
  <div class="emoji">
  <h5><img src="/img/glyphicons-246-chat.png" heigth="25" width="25"> <mark><%=rows.username%></mark> <%=rows.created_at%></h5>
</div>
  <%})%>
    <form action="/business/comments/<%=business.id%>?_method=DELETE" method="POST">
    <button>DELETE</button>
  </form>
  </div>

<div class="col-md-6 comment">
    <form action="/business/comments/<%=business.id%>" method="POST">
  <input type="text" class="form-control" name="comment" placeholder="Comment Here"><br>
  <input type="text" class="form-control" name="username" placeholder="username"><br>
  <button>Submit</button>
  </form>
  </div>
	

